<div class="bg-dark-subtle">
    <div class="container py-3">
      <div class="mx-auto" style="width: 100%; max-width: 450px;">
        <h1 class="text-center py-5 px-5">ADD MY PROJECT</h1>
        <form method="post" action="/add-blog" class="form">
          <div class="form-group mb-3">
            <label for="inputName">Project Name</label>
            <input type="text" class="form-control" id="project" name="title" />
          </div>

          <div style="width: 100%; gap:10px; display: flex;">
            <div class="d-flex flex-column " style="width: 50%;">
              <label for="label-date" class="date">Start Date</label>
              <input type="date" name="startDate" class="date-input rounded-2" id="date-awal" />
            </div>
            <div class="d-flex flex-column" style="width: 50%;">
              <label for="label-date" class="date">End Date</label>
              <input type="date" name="endDate" class="date-input rounded-2" id="date-end" />
            </div>
          </div>

          <label for="label-des">Deskripsi</label>
          <textarea class="form-control" id="deskripsi" rows="5" name="deskripsi"></textarea><br />

          <label for="technology">Technologies</label>
          <div class="form-check d-flex justify-content-between">
            <input class="form-check-input" type="checkbox" id="nodejs" name="nodejs" value="nodejs" />
            <label class="form-check-label" for="nodejs"> Node JS</label><br />
            <input class="form-check-input" type="checkbox" id="reactjs" name="reactjs" value="reactjs" />
            <label class="form-check-label" for="reactjs"> React JS</label><br />
            <input class="form-check-input" type="checkbox" id="nextjs" name="nextjs" value="nextjs" />
            <label class="form-check-label" for="nextjs"> NextJS</label><br />
            <input class="form-check-input" type="checkbox" id="typescript" name="typescript" value="typescript" />
            <label class="form-check-label" for="typescript"> TypeScript</label><br />
          </div>

          <div>
            <label for="image">Upload Image</label><br />
            <input type="file" name="gambar" id="inputImage" class="input-file" />
          </div>

          <div class="d-flex justify-content-end">
            <button class="text-white bg-dark rounded-2">Submit</button>
          </div>
        </form>
      </div>
    </div>
