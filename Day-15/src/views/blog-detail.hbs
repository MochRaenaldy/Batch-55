
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <title>Blog Detail</title>
    <link rel="stylesheet" href="/assests/css/index.css" />
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/assests/images/dumbways.png" style="height: 50px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/blog">My Project</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/testimonial">Testimonial</a>
                    </li>
                </ul>

                 {{#if isLogin}}
                <p class="mt-3">Welcome, {{user.name}}</p>
                <a href="/logout"><button class="btn btn-transparent me-2 ">Logout</button></a>
                {{else}}
                <a href="/login"><button class="btn btn-transparent me-2">Login</button></a>
                <a href="/register"><button class="btn btn-transparent me-2">Register</button></a>
                {{/if}}

                <a href="/contact"><button class="btn btn-dark" type="submit">Contact Me</button></a>
            </div>
        </div>
    </nav>

    <!-- ini isi dari blog detail -->
    

    <div class="container my-5">
        <div class="blog-detail row justify-content-center">
            <div class="blog-detail-container col-md-10">
                <h1 class="display-4 fw-bold">{{detail.title}}</h1>
                <div class="author text-muted mb-4"> 
                    Rey | {{detail.startDate}} - {{detail.endDate}} | </br>
                   </div>
               <div class="d-flex">
                <img {{#if detail.gambar}}src="/upload/{{detail.gambar}}" {{else}}src="/assests/images/img-not-found.jpg"{{/if}}  alt="ini-gambar" class="img-fluid rounded-start" width="150px" height="250px">
                <div>
                    <p class="my-2">Technologies :</p>
                     <img {{#if detail.nodejs}} src="/assests/images/node.png" {{else}}=""{{/if}} width="50px" class="mx-1"> 
                     <img {{#if detail.reactjs}} src="/assests/images/react.png" {{else}}""{{/if}} width="50px" class="mx-1"> 
                     <img {{#if detail.nextjs}} src="/assests/images/next.png"{{else}}=""{{/if}} width="50px" class="mx-1"> 
                     <img {{#if detail.typescript}} src="/assests/images/ts.png"{{else}}=""{{/if}} width="50px" class="mx-1">
                    </div>
               </div>   
                <p class="lead">
                    {{detail.deskripsi}}
                </p>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
